[core]
	editor = vim
	autocrlf = input
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	ui = auto
[help]
	autocorect = 1
[push]
	default = matching
[user]
	email = not.m.schneider@gmail.com
	name = M.Schneider
[github]
	user = mschneider
[alias]
	b = branch
	ch = diff -M -C --find-copies-harder -l64 --stat HEAD
	cl = clone
	cm = commit
	camm = cm -am
	co = checkout
	gr = grep -n
	lg = log --graph --pretty=format:'%Cred%h%Creset %Cblue%aN%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	ps = push
	pl = pull
	mr = merge
	rb = rebase
	st = status
	sl = shortlog -sn


